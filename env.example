# Copy to .env.local and fill with your Supabase project's connection string.
# Tip: Supabase → Project Settings → Database → Connection string → URI.
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/postgres?sslmode=require"
BETTER_AUTH_SECRET="generate-a-long-random-secret"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Generic S3-compatible storage (AWS S3, R2, MinIO, etc.)
S3_ACCESS_KEY_ID="1234"
S3_SECRET_ACCESS_KEY="1234"
S3_REGION="ap-southeast-2"
S3_BUCKET_NAME="ow-tool"
# Optional custom endpoint (eg. https://s3.amazonaws.com or R2 URL)
S3_ENDPOINT="1234"
# Public base URL used to read files (fallbacks to AWS style if empty)
S3_PUBLIC_URL=""
# Set to true for providers that require path-style requests (eg. MinIO)
S3_FORCE_PATH_STYLE="false"
